<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/grid_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_friends_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        app:cardBackgroundColor="@color/vk_white">

        <TextView
            android:id="@+id/text_friends_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="4dp"
            android:textColor="@color/vk_black"
            android:textSize="15sp"/>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/card_your_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:cardBackgroundColor="@color/vk_color">

        <TextView
            android:id="@+id/text_your_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="4dp"
            android:textColor="@color/vk_black"
            android:textSize="14sp"
            />
    </android.support.v7.widget.CardView>


</LinearLayout>